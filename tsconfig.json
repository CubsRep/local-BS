{
    "extends": "@backstage/cli/config/tsconfig.json",
    "include": [
        "packages/*/src",
        "packages/*/config.d.ts",
        "plugins/*/src",
        "plugins/*/config.d.ts",
        "plugins/*/dev",
        "plugins/*/migrations"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "dist-types",
        "rootDir": ".",
        "jsx": "react-jsx",
        "module": "commonjs",
        "target": "ES2020",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@internal/plugin-scaffolder-backend-module-drn": [
                "plugins/scaffolder-backend-module-drn/src"
            ],
        },
    },
}